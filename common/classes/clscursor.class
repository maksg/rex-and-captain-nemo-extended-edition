OBJECT=SCURRENTCURSOR
SCURRENTCURSOR:TYPE=STRING

OBJECT=ANNCURSOR
ANNCURSOR:TYPE=ANIMO
ANNCURSOR:VISIBLE=TRUE
ANNCURSOR:FILENAME=$COMMON\CURSOR.ANN
ANNCURSOR:TOCANVAS=TRUE
ANNCURSOR:PRIORITY=70000
ANNCURSOR:FPS=16
ANNCURSOR:PRELOAD=TRUE
ANNCURSOR:RELEASE=TRUE
ANNCURSOR:MONITORCOLLISION=FALSE
ANNCURSOR:MONITORCOLLISIONALPHA=FALSE

OBJECT=CONSTRUCTOR
CONSTRUCTOR:TYPE=BEHAVIOUR
CONSTRUCTOR:CODE={MOUSE^HIDE();ANNCURSOR^PLAY("STD");}


OBJECT=SET
SET:TYPE=BEHAVIOUR
SET:CODE={@STRING("STMPCNAME",$1);@IF("STMPCNAME","!_","SCURRENTCURSOR","BFITMP213","");}


OBJECT=MOVE
MOVE:TYPE=BEHAVIOUR
MOVE:CODE={ANNCURSOR^MOVE($1,$2);}


OBJECT=SHOW
SHOW:TYPE=BEHAVIOUR
SHOW:CODE={ANNCURSOR^SHOW();}


OBJECT=HIDE
HIDE:TYPE=BEHAVIOUR
HIDE:CODE={ANNCURSOR^HIDE();}


OBJECT=BFITMP213
BFITMP213:TYPE=BEHAVIOUR
BFITMP213:CODE={SCURRENTCURSOR^SET(STMPCNAME);ANNCURSOR^PLAY(SCURRENTCURSOR);}


